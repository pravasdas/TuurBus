<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <net.igenius.customcheckbox.CustomCheckBox
            android:id="@+id/checkBox"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_below="@+id/tvTour"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            app:color_checked="@color/red"
            app:color_tick="@color/white"
            app:color_unchecked="@color/white"
            app:color_unchecked_stroke="@color/red"
            app:duration="1"
            app:stroke_width="2dp" />

        <TextView
            android:id="@+id/tvTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/checkBox"
            android:gravity="center_vertical"
            android:text="Adventure"
            android:textColor="@color/black" />

    </RelativeLayout>
</android.support.v7.widget.CardView>